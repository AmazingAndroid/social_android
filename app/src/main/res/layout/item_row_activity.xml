        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/profile_background_color"
            android:orientation="vertical">
        <com.example.lovekeshkumar.projectmvpbase.font.RobotoTextView
            android:id="@+id/dayre"
          style="@style/TextViewAppearance.Caption1"
            android:text="Today"
            android:textSize="15sp"
            android:textColor="@color/profile_text_color_wahhao"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/backLayout"
            android:weightSum="1"
            >

            <include layout="@layout/custom_rounded_image"
                android:layout_width="60dp"
                android:layout_height="60dp"



                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding"
                android:padding="@dimen/paddingS"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"></include>
        <!--    <ImageView
                android:id="@+id/image_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding"
                android:padding="@dimen/paddingS"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textm"
                    android:text="Casper Pearled Tortoise"
                    fontPath="fonts/bold.otf"

                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:paddingRight="@dimen/padding"
                    android:id="@+id/tvHeading"
                    tools:ignore="MissingPrefix" />
                <TextView
                    android:layout_marginTop="@dimen/paddingS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/texts"
                    android:text="@string/lorem_ipsum"
                    android:textColor="@color/white"
                    android:lines="2"
                    android:ellipsize="end"
                    android:ems="2"
                    android:paddingRight="@dimen/padding"

                    android:id="@+id/tvDesc"
                    android:textAllCaps="false"

                    />
            </LinearLayout>

        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_2dp"
                android:layout_marginTop="@dimen/margin_2dp"
                android:background="@color/divider_color_wahhao"></View>
        </LinearLayout>
<!--    </android.support.v7.widget.CardView>-->

</android.support.design.widget.CoordinatorLayout>