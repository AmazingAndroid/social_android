<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/profile_theam_color"
    android:orientation="vertical"
    android:padding="@dimen/margin_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center">

        <com.example.lovekeshkumar.projectmvpbase.font.RobotoTextView
            style="@style/TextViewAppearance.Headline3"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="10"
            android:maxLines="2"
            android:text="@string/today_only"
            android:textAllCaps="true"
            android:textColor="@color/white_100_percent"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_launcher" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_weight="1"

        android:gravity="center|top">


        <com.example.lovekeshkumar.projectmvpbase.font.RobotoTextView
            style="@style/TextViewAppearance.Caption1"

            android:layout_alignParentTop="true"

            android:ellipsize="end"

            android:maxLines="1"
            android:text="@string/when_you_buy"

            android:textColor="@color/white_30_percent"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_launcher" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_weight="1.3"

        android:gravity="center|top">


    </LinearLayout>

</LinearLayout>