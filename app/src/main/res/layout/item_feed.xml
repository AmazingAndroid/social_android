<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/feed_row"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/profile_theam_color"
        app:cardCornerRadius="@dimen/padding"
        android:layout_marginTop="25dp"
            android:id="@+id/card_view"
        >
    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/texts"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="@dimen/padding"
            android:textSize="@dimen/textl"
            android:text="hello"
            android:id="@+id/feed_name"
            />
        <VideoView
            android:id="@+id/horizontal_scroll_video"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/padding"
            android:visibility="gone"
           >
        </VideoView>
        <ImageView
            android:id="@+id/horizontal_scroll_thumb"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="bottom"
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/padding"
            android:visibility="gone"
            >
        </ImageView>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/horizontal_scroll_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/padding"
            android:isScrollContainer="false"
            android:fadingEdge="horizontal"
            android:fadingEdgeLength="40dp"
            android:requiresFadingEdge="vertical"
            >
        </android.support.v7.widget.RecyclerView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="hello"
            android:padding="@dimen/padding"
            android:layout_marginTop="@dimen/padding"
            android:layout_marginLeft="@dimen/paddingS"
            android:id="@+id/text_feed"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/paddingS"
            android:layout_marginTop="@dimen/paddingL"
            >
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/paddingL"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/paddingL"
                >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_time"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hello"
                    android:id="@+id/time"
                    android:textColor="@color/white"
                    android:layout_marginRight="@dimen/padding"
                    android:layout_marginLeft="@dimen/paddingS"
                    />

            </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/paddingL"
            android:layout_alignParentRight="true"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_launcher"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hello"
                android:textColor="@color/white"
                android:layout_marginRight="@dimen/padding"
                android:layout_marginLeft="@dimen/paddingS"
                android:id="@+id/like_count"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_launcher"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hello"
                android:textColor="@color/white"
                android:layout_marginRight="@dimen/padding"
                android:layout_marginLeft="@dimen/paddingS"
                android:id="@+id/comment_count"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_launcher"
                />
        </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        >
        <include layout="@layout/custom_rounded_image"></include>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:padding="@dimen/padding"
        android:layout_alignParentRight="true"
        android:id="@+id/follow_feed"
        android:layout_marginTop="@dimen/paddingS"
        android:background="@drawable/rounded_white_right_store"
        >
        <com.example.lovekeshkumar.projectmvpbase.font.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Follow"
            android:layout_marginLeft="@dimen/paddingL"
            android:layout_marginRight="@dimen/paddingL"
            android:textAllCaps="true"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/tabseletced_color"
            />
    </RelativeLayout>

</RelativeLayout>