    <LinearLayout
        style="@style/layoutStyleWahhao.LinnerLayouts"
        android:background="@color/profile_theam_color"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1">
            <include layout="@layout/custom_rounded_image"></include>

            <com.example.lovekeshkumar.projectmvpbase.font.RobotoTextView
                style="@style/TextViewAppearance.Title2"
                android:id="@+id/user_name"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:gravity="left|center"
                android:text="amywilliams"
                android:textColor="@color/white_100_percent" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1">

            <CheckBox
                android:id="@+id/checkbox_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="right|center"
                android:button="@drawable/selector_favorit1" />
        </RelativeLayout>


    </LinearLayout>
