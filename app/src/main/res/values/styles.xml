<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="DebugText" parent="Widget.AppCompat.Button.Small">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Facebook.Button.Feed" parent="android:Widget">
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
    </style>

    <style name="DimmedTextButton" parent="Facebook.Button.Feed">
        <item name="android:textColor">#e5e5e5</item>
    </style>

    <style name="Toro.Dialog.Fullscreen" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
    </style>

    <style name="Toro.Dialog.Fullscreen.NoTitle">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Toro.Theme.Board" parent="Toro.Dialog.Fullscreen.NoTitle">
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <integer name="grid_span">1</integer>
    <string name="layout_manager">android.support.v7.widget.GridLayoutManager</string>



    <!-- Theme for the custom activity -->
    <style name="AppTheme.NoActionBar.Translucent">

    </style>

    <style name="AppTheme.Custom" parent="AppTheme.NoActionBar.Translucent">
    </style>


    <style name="BaseText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textSize">14sp</item>
        <item name="android:shadowDx">-1</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:gravity">center</item>
    </style>
   <!-- <style name="card_view_with_text" parent="@style/card_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_alignParentBottom">true</item>
        <item name="cardBackgroundColor">@color/percent_50_black</item>
    </style>-->
    <style name="RecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

</resources>
